{% extends 'base.html.twig' %}

{% block title %}Liste de nos produits{% endblock %}

{% block body %}
    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container text-center py-5">
            <h1 class="display-3 text-white mb-4 animated slideInDown">Nos ingrédients</h1>
        </div>
    </div>
    <!-- Page Header End -->


    <!-- Product Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <p class="section-title bg-white text-center text-primary px-3">Nos familles d'ingrédients</p>
                <h1 class="mb-5">Découvrir nos solutions</h1>
            </div>
            <div class="row gx-4 d-flex justify-content-around">
                <div class="col-md-6 col-lg-4 col-xl-3 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="product-item">
                        <div class="position-relative famille">
                            <a class="d-block h5" href="">
                                <img class="img-fluid" src="{{ asset('img/famille1.jpg') }}" alt="famille alimentaire">
                            </a>
                        </div>
                        <div class="text-center p-4">
                            <a class="d-block h5" href="">Alimentaire</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 col-xl-3 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="product-item">
                        <div class="position-relative famille">
                            <a class="d-block h5" href="">
                                <img class="img-fluid" src="{{ asset('img/ecocert.jpg') }}" alt="famille bio">
                            </a>
                        </div>
                        <div class="text-center p-4">
                            <a class="d-block h5" href="">Produits Bio</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 col-xl-3 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="product-item">
                        <div class="position-relative famille">
                            <a class="d-block h5" href="">
                                <img class="img-fluid" src="{{ asset('img/famille1.jpg') }}" alt="famille technique">
                            </a>
                        </div>
                        <div class="text-center p-4">
                            <a class="d-block h5" href="">Technique</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Product End -->

{% endblock %}
