{% extends 'base.html.twig' %}

{% block title %}Page produit{% endblock %}

{% block body %}
    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container text-center py-5">
            <h1 class="display-3 text-white mb-4 animated slideInDown">{{ product.type.name }}</h1>
        </div>
    </div>
    <!-- Page Header End -->


    <!-- Service Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="pb-4 wow fadeInUp d-flex justify-content-between" data-wow-delay="0.1s">
                <h1 class="mb-5" style="max-width: 800px;">{{ product.nom }}</h1>
                <div class="col-auto">
                    {% if product.image %}
                        <img class="img-fluid"
                             src="{{ asset('uploads/images/products/'~product.image) }}"
                             alt="image produit" style="max-width: 200px;">
                    {% else %}
                        <img class="img-fluid"
                             src="{{ asset('uploads/images/family/'~product.type.family.image) }}"
                             alt="image famille" style="max-width: 200px;">
                    {% endif %}
                </div>
            </div>


            <div class="row gy-5 gx-4">

                <h2>Applications</h2>
                {% for application in product.applications %}
                    <a class="d-block h5" href="{{ path('app_application', {'id': application.id}) }}">
                        <div class="col-lg-9 col-md-6">
                            <div class="d-flex h-100">
                                <p class="mb-4">{{ application.libelle }}</p>
                            </div>
                        </div>
                    </a>
                {% endfor %}
                <div class="col-lg-9 col-md-6">
                    <div class="d-flex h-100">
                        <p class="mb-4">{{ product.packaging }}</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Service End -->
{% endblock %}
