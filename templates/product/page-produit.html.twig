{% extends 'base.html.twig' %}

{% block title %}Page produit{% endblock %}

{% block body %}
    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container text-center py-5">
            <h1 class="display-3 text-white mb-4 animated slideInDown">{{ product.type.name }}</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb justify-content-center mb-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_familles') }}">Familles</a></li>
                    <li class="breadcrumb-item"><a
                                href="{{ path('app_types_family', { 'id' : product.type.id }) }}">Types</a></li>
                </ol>
            </nav>

        </div>
    </div>
    <!-- Page Header End -->


    <!-- Service Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="pb-4 wow fadeInUp d-flex justify-content-between" data-wow-delay="0.1s">
                <h1 class="mb-5" style="max-width: 800px;">{{ product.nom }}</h1>
                <div class="col-auto">
                    {% if product.image %}
                        <img class="img-fluid"
                             src="{{ asset('uploads/images/products/'~product.image) }}"
                             alt="image produit" style="max-width: 200px;">
                    {% else %}
                        <img class="img-fluid"
                             src="{{ asset('uploads/images/family/'~product.type.family.image) }}"
                             alt="image famille" style="max-width: 200px;">
                    {% endif %}
                </div>
            </div>

            <h2>Applications</h2>
            <div class="d-flex app-rows mb-4 mt-2">

                {% for application in product.applications %}
                    <div class="app-pills">
                        <a href="{{ path('app_application', {'id': application.id}) }}"
                           class="btn rounded-pill animated slideInRight" style="width: 100%;"
                           title="{{ application.libelle }}">
                            <img class="img-fluid mb-2"
                                 src="{{ asset('uploads/images/application/icone/'~application.icone) }}"
                                 alt="" style="width: 30px">
                            <p class="libelle-application">{{ application.libelle }}</p>
                        </a>
                    </div>
                {% endfor %}

            </div>

            <div class="d-flex">
                <p class="mb-4">{{ product.packaging }}</p>
            </div>
        </div>
    </div>
    <!-- Service End -->
{% endblock %}
