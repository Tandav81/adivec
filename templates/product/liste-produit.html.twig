{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}
    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container text-center py-5">
            <h1 class="display-3 text-white mb-4 animated slideInDown">Nos produits</h1>
        </div>
    </div>
    <!-- Page Header End -->

    <!-- Product Start -->
    <div class="container-xxl py-5">

        <div class="container">

            <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <p class="section-title bg-white text-center text-primary px-3">Nos produits</p>
            </div>

            <div class="container d-flex align-items-center justify-content-center flex-wrap">
                {% for product in products %}
                    <div class="box">
                        <div class="body">
                            <div class="imgContainer">
                                {% if product.image %}
                                    <img class="img-fluid"
                                         src="{{ asset('uploads/images/products/'~product.image) }}"
                                         alt="famille alimentaire">
                                {% else %}
                                    <img class="img-fluid"
                                         src="{{ asset('uploads/images/family/'~product.type.family.image) }}"
                                         alt="famille alimentaire">
                                {% endif %}
                                <div class="texte-over-image">
                                    <p class="fs-6">{{ product.packaging }}</p>
                                    <p class="fs-6">{{ product.applications.toString() }}</p>
                                </div>
                            </div>
                            <div class="content d-flex flex-column align-items-center justify-content-center">
                                <div>
                                    <h3 class="text-white fs-5">{{ product.nom }}</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <!-- Product End -->
{% endblock %}
