{% extends 'base.html.twig' %}
{% block seo %}
    <meta name="description" content="Contactez-nous"/>
{% endblock %}
{% block title %}Contactez-nous!{% endblock %}

{% block body %}
    <!-- Contact Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <p class="section-title bg-white text-center text-primary px-3">Contactez-nous</p>
            </div>
            <div class="row g-5">
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                    <h3 class="mb-4">Besoin de nous contacter?</h3>
                    <p>Utilisez le formulaire ci-dessous!</p>
                    <div>
                        {{ form_start(form) }}
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-floating">
                                    <div>
                                        {{ form_label(form.company, 'Société') }}
                                    </div>
                                    <div>
                                        {{ form_widget(form.company, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <div>  {{ form_label(form.nom, 'Votre nom') }}</div>
                                    <div>{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}</div>


                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <div>{{ form_label(form.email, 'Votre email') }}</div>
                                    <div>{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <div>{{ form_label(form.numTel, 'Votre numéro de téléphone') }}</div>
                                    <div>{{ form_widget(form.numTel, {'attr': {'class': 'form-control'}}) }}</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <div>{{ form_label(form.codePostal, 'Votre code postal') }}</div>
                                    <div> {{ form_widget(form.codePostal, {'attr': {'class': 'form-control'}}) }}</div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <div>{{ form_label(form.message, 'Votre message') }}</div>
                                    <div>{{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}</div>


                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-secondary rounded-pill py-3 px-5" type="submit"
                                        aria-labelledby="envoyer">Envoyer le message
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                    <h3 class="mb-4">Nos informations</h3>
                    <div class="d-flex border-bottom pb-3 mb-3">
                        <div class="flex-shrink-0 btn-square bg-secondary rounded-circle">
                            <i class="fa fa-map-marker-alt text-body"></i>
                        </div>
                        <div class="ms-3">
                            <h6>Notre bureau</h6>
                            <span>10 bis rue de Lahire, 45000 Orléans</span>
                        </div>
                    </div>
                    <div class="d-flex border-bottom pb-3 mb-3">
                        <div class="flex-shrink-0 btn-square bg-secondary rounded-circle">
                            <i class="fa fa-phone-alt text-body"></i>
                        </div>
                        <div class="ms-3">
                            <h6>Appelez-nous</h6>
                            <span>02 38 24 15 50</span>
                        </div>
                    </div>
                    <div class="d-flex border-bottom-0 pb-3 mb-3">
                        <div class="flex-shrink-0 btn-square bg-secondary rounded-circle">
                            <i class="fa fa-envelope text-body"></i>
                        </div>
                        <div class="ms-3">
                            <h6>Envoyez-nous un email</h6>
                            <span>contact@adivec.fr</span>
                        </div>
                    </div>


                        <iframe width="600" height="300" style="border:0;" allowfullscreen="" loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade" title="point gps Adivec"
